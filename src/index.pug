doctype html

hmtl(lang='en')
  head
    meta(charset='utf-8')
    title UI page
  body
    #content
      h2 STANDARD BUTTONS
      #standard-buttons
        +standard_button('small-green-button') 
          | button
        +standard_button('big-green-button') 
          | button
        +standard_button('big-orange-button')
          | button
        +standard_button('small-orange-button')
          | button
      
      h2 ARROW BUTTONS
      #arrow-buttons
        +arrow_button('left-arrow')
        +arrow_button('right-arrow')

      h2 PERCENTAGES/PIE CHART
      #percentages
        .circle
          .circle-text
  
        .pie

      h2 SLIDERS
      .row
        .left
          div
            +slider('50')

        .right
          div
            +sliderval('40')

      div
        //+bubble('top-bubble')
        //  h2 WEIRD
        //+bubble('right-bubble', {width:'100px', height:'100px'})

      h2 STAGES
      +stage(['one', 'two', 'three', 'four', 'five'])

      h2 FORM ELEMENTS
      .row
        .left
          +message-form
          h2 SEARCH/DROP DOWNS
            +search
            br
            +dropdown

        .right

          h2 TOGGLES
          div
            +toggle('test', 'test')

          h2 TICK BOXES
          div
            +checkbox('test')
          //i(class='fa fa-search', style='color:grey;font-size:2em')
          //+avatar()

