include components/buttons/standard/button
include components/buttons/arrow/button
include components/progress/slider/slider
include components/progress/sliderval/slider
include components/bubble/bubble
include components/progress/stage/stage
include components/progress/chart/chart
include components/input/checkbox/checkbox
include components/input/toggle/toggle
include components/input/text/text
include components/input/textarea/textarea

include composite/profile/profile

doctype html

hmtl(lang='en')
  head
    meta(charset='utf-8')
    title UI page
  body
    #content
      h2 STANDARD BUTTONS
      #standard-buttons
        +standard_button('small-green-button') 
          | small green
        +standard_button('big-green-button') 
          | big green
        +standard_button('big-orange-button')
          | big orange
        +standard_button('small-orange-button')
          | small orange 
      
      h2 ARROW BUTTONS
      #arrow-buttons
        +arrow_button('left-arrow')
        +arrow_button('right-arrow')

      h2 PERCENTAGES/PIE CHART
      #percentages
        .circle
          .circle-text
  
        .pie

      h2 SLIDERS
      #sliders
        div
          +slider('50')
        div
          +sliderval('40')

      div
        +bubble('top-bubble')
          h2 WEIRD
        //+bubble('right-bubble', {width:'100px', height:'100px'})

      h2 STAGES
      +stage(['one', 'two', 'three', 'four', 'five'])

      h2 FORM ELEMENTS
      .row
        .left
          div(style='text-align:left')
            +input-text('name', 'Your name')
            br
            +input-text('email', 'Your email')
            br
            +input-textarea('message', 'Your message')
            br
            input(type='submit', value='SUBMIT', class='button big-green-button')

        h2 SEARCH/DROP DOWNS

        .right

          h2 TOGGLES
          div
            +toggle('test', 'test')

          h2 TICK BOXES
          div
            +checkbox('test')
          //i(class='fa fa-search', style='color:grey;font-size:2em')
          //+avatar()

          h2 PROFILES
          +profile('profile-1', {
            name:'Ricardo Milos', 
            occupation:'Full-time flex', 
            src:'https://m-ch.ml/rand/rB/18.jpeg'
          })

      #test
        
