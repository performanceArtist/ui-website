mixin map({id = 'map', title = 'Meet us!', street = '1259 California st', city = 'san francisco, ca'} = {})
  .map(id=id)
    .map__info     
      .map__info-text
        .map__title #{title}
        .map__address 
          | #{street}
          br
          | #{city}
      .map__icon-container
        img.map__icon(src='images/crosshair.png')
        img.map__icon(src='images/location.png')

