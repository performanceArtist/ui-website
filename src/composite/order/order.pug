include ../../components/stage/stage
include ../../components/dropdown/dropdown
include ../../components/checkmark/checkmark
include ../../components/toggle/toggle

mixin order({menu = {}, special:{name = "Special sauce:", toggle = {}} = {}, stage, crustOptions = []} = {})
  .order
    h2.standard-heading.order__title Order
    +stage(stage)
  
    form.order__form
      +dropdown(menu)
    
      .order__options
        .order__sauce #{name}
          +toggle(toggle)
  
        .order__crust
          each option in crustOptions
            +checkmark(option)
  
      .order__address
        input.order__input(name='address', placeholder='Address')
        .status__bubble
  
      .order__submit
        input(type='submit', value='SUBMIT', class='button button_small button_green')