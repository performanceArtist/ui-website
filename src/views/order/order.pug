extends ../../layout

block head
  title Order

block content
  h2 Order
  +stage('stages')

  form.order
    +dropdown({name:'pizza', options:['Pepperoni', 'Cheesy Crust', 'Vegetarian']})
  
    .order__options
      .order__sauce
        | Special sauce:
        +toggle({name:'sauce', value:'yep'})

      .order__crust
        +checkmark({name:'crust', type:'radio', value:'thin', label:'Thin'})
        +checkmark({name:'crust', type:'radio', value:'standard', label:'Standard'})

    .order__address
      +input-text({name:'address', placeholder:'Address'})
      +bubble

    .order__submit
      input(type='submit', value='SUBMIT', class='button button_small button_green')
